<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metadata" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_get_list_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get list metadata" />

                    <Button
                        android:id="@+id/bt_create_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create metadata" />

                    <Button
                        android:id="@+id/bt_get_detail_of_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get detail of metadata metadata" />

                    <Button
                        android:id="@+id/bt_update_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update metadata" />

                    <Button
                        android:id="@+id/bt_delete_an_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete an metadata" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video on Demand" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_list_all_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List all entity" />

                    <Button
                        android:id="@+id/bt_retrieve_an_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Retrieve an entity" />

                    <Button
                        android:id="@+id/bt_create_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create an entity" />

                    <Button
                        android:id="@+id/bt_update_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update an entity" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Streaming" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_get_live_entities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Entities" />

                    <Button
                        android:id="@+id/bt_get_live_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Entity" />

                    <Button
                        android:id="@+id/bt_create_live_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Entity" />

                    <Button
                        android:id="@+id/bt_update_live_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Entity" />

                    <Button
                        android:id="@+id/bt_delete_live_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Entity" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Sessions" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_get_sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Live Sessions" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skin" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_list_skin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List skin" />

                    <Button
                        android:id="@+id/bt_skin_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skin config" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ad" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_ad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMA ad" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULT"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_10" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
