<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical"
    tools:context="testlibuiza.sample.v3.MainV3Activity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uiza VOD"
                    android:textSize="@dimen/txt_30" />

                <Button
                    android:id="@+id/bt_slide_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1 Slide" />

                <Button
                    android:id="@+id/bt_resize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2. Resize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guide Call API"
                    android:textSize="@dimen/txt_30" />

                <Button
                    android:id="@+id/bt_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Guide" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textSize="@dimen/txt_30" />

                <Button
                    android:id="@+id/bt_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Error" />

                <Button
                    android:id="@+id/bt_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dummy" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
