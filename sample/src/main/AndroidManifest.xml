<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="testlibuiza">

    <application
        android:name=".app.LSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".sample.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".sample.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="testlibuiza.sample.MainActivity" />
        </activity>
        <activity
            android:name=".sample.UizaTestAPIActivity"
            android:parentActivityName=".sample.MainActivity" />
        <activity
            android:name=".sample.FirebaseAuthActivity"
            android:parentActivityName=".sample.MainActivity" />
        <activity
            android:name=".sample.LivePlaybackActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:parentActivityName=".sample.fragments.LiveListFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sample.PlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:parentActivityName=".sample.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".sample.DummyActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:parentActivityName=".sample.MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".sample.ErrorActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:parentActivityName=".sample.MainActivity" />
        <activity
            android:name=".sample.EventActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:parentActivityName=".sample.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>