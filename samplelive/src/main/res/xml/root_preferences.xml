<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="pref_source"
        app:title="@string/source_title">
        <ListPreference
            app:defaultValue="development-api.uizadev.io"
            app:entries="@array/api_base_arrays"
            app:entryValues="@array/api_base_values"
            app:iconSpaceReserved="false"
            app:key="api_base_url_key"
            app:title="@string/api_base_title"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="api_token_key"
            app:title="@string/api_token_title"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="in-bangalore-1"
            app:entries="@array/region_arrays"
            app:entryValues="@array/region_arrays"
            app:iconSpaceReserved="false"
            app:key="region_key"
            app:title="@string/region_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="pref_video"
        app:title="@string/video_title">

        <ListPreference
            app:defaultValue="720"
            app:entries="@array/profile_entries"
            app:entryValues="@array/profile_values"
            app:iconSpaceReserved="false"
            app:key="camera_profile_key"
            app:title="@string/profile_title"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="24"
            app:entries="@array/fps_entries"
            app:entryValues="@array/fps_values"
            app:iconSpaceReserved="false"
            app:key="fps_key"
            app:title="@string/fps_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="2"
            app:iconSpaceReserved="false"
            app:key="frame_interval_key"
            app:title="@string/keyframe_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="pref_audio"
        app:title="@string/audio_title">

        <ListPreference
            app:defaultValue="64"
            app:entries="@array/bitrate_entries"
            app:entryValues="@array/bitrate_values"
            app:iconSpaceReserved="false"
            app:key="audio_bitrate_key"
            app:title="@string/bitrate_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="32000"
            app:entries="@array/sample_rates"
            app:entryValues="@array/sample_rate_values"
            app:iconSpaceReserved="false"
            app:key="sample_rate_key"
            app:title="@string/sample_rate_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="audio_stereo_key"
            app:summaryOff="1 Channel"
            app:summaryOn="2 Channel"
            app:title="@string/stereo_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="pref_general"
        app:title="@string/general_title">
        <Preference
            app:defaultValue="200101"
            app:iconSpaceReserved="false"
            app:key="version_key"
            app:title="@string/version_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>
