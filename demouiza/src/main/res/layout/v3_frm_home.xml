<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <uiza.v4.helper.view.UizaActionBar
                android:id="@+id/uiza_action_bar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="@dimen/w_250"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/black_65">

            <!--<vn.loitp.views.realtimeblurview.RealtimeBlurView
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="@dimen/round_55"
                app:realtimeOverlayColor="@color/black_5" />-->

            <vn.uiza.views.placeholderview.lib.placeholderview.PlaceHolderView
                android:id="@+id/drawerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </FrameLayout>
    </androidx.core.widget.DrawerLayout>

    <ProgressBar
        android:id="@id/pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="@dimen/w_20"
        android:layout_height="@dimen/w_20"
        android:layout_centerInParent="true" />
</RelativeLayout>

