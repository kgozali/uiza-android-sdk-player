<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_player_controller"
    android:elevation="4dp"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <vn.uiza.views.autosize.UizaImageButton
            android:id="@id/exo_back_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_arrow_left_white_48" />

        <vn.uiza.views.autosize.UizaTextView
            android:id="@id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!--<vn.uiza.views.autosize.UZImageButton
            android:id="@id/exo_picture_in_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_picture_in_picture_alt_white_48" />-->

        <vn.uiza.views.autosize.UizaImageButton
            android:id="@id/exo_fullscreen_toggle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fullscreen_white_48" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/rl_live_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:visibility="visible">

        <vn.uiza.views.autosize.UizaTextView
            android:id="@id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/background_live"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:text="@string/live"
            android:textColor="@android:color/white" />

        <vn.uiza.views.autosize.UizaImageButton
            android:id="@id/iv_live_time"
            android:layout_width="@dimen/w_15"
            android:layout_height="@dimen/w_15"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_live_time"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_timer_white_48" />

        <vn.uiza.views.autosize.UizaTextView
            android:id="@id/tv_live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_toStartOf="@id/iv_live_view"
            android:textColor="@android:color/white" />

        <vn.uiza.views.autosize.UizaImageButton
            android:id="@id/iv_live_view"
            android:layout_width="@dimen/w_15"
            android:layout_height="@dimen/w_15"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_live_view"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_visibility_white_48" />

        <vn.uiza.views.autosize.UizaTextView
            android:id="@id/tv_live_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/rl_time_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@id/preview_frame_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video_frame"
                android:padding="@dimen/video_frame_width">

                <ImageView
                    android:id="@id/image_view_thumnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <vn.uiza.views.autosize.UizaTextView
                android:id="@id/uz_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_frame_layout"
                android:layout_marginStart="@dimen/margin_5"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <vn.uiza.views.autosize.UizaTextView
                android:id="@id/uz_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_frame_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <uizacoresdk.view.rl.PreviewTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/uz_duration"
                app:ad_marker_color="@color/light_yellow"
                app:buffered_color="@color/light_grey"
                app:played_ad_marker_color="@color/light_yellow"
                app:played_color="@android:color/white"
                app:previewFrameLayout="@id/preview_frame_layout"
                app:scrubber_color="@android:color/white"
                app:unplayed_color="@color/grey" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_play_uiza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_play_circle_outline_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_pause_uiza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pause_circle_outline_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_replay_uiza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_replay_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_rew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_replay_10_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_ffwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/ic_forward_10_white_48"
                android:tint="@android:color/white" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_skip_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_skip_previous_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_skip_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_skip_next_white_48" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_playlist_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_playlist_play_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_directions_run_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_volume_up_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_closed_caption_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_hearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_audiotrack_white_48" />

            <vn.uiza.views.autosize.UizaImageButton
                android:id="@id/exo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_high_quality_white_48" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@id/rl_end_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <vn.uiza.views.autosize.UizaTextView
            android:id="@id/tv_end_screen_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>