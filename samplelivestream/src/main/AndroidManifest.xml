<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.uiza.samplelivestream">

    <application
        android:name="io.uiza.samplelivestream.AppV5"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.uiza.samplelivestream.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.uiza.samplelivestream.LivePortraitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.uiza.samplelivestream.LiveLandscapeActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>